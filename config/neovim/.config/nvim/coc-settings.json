{
  "$schema": "https://raw.githubusercontent.com/neoclide/coc.nvim/master/data/schema.json",
  // https://github.com/neoclide/coc.nvim/wiki/Language-servers
  // https://github.com/neoclide/coc.nvim/blob/master/doc/coc-config.txt
  "colors.enable": true,
  "codeLens.enable": true,
  "codeLens.position": "eol",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true,
  "suggest.completionItemKindLabels": {
    "text": "",
    "method": "",
    "function": "󰊕",
    "constructor": "󰊕",
    "field": "",
    "variable": "",
    "class": "",
    "interface": "",
    "module": "",
    "property": "",
    "unit": "",
    "value": "",
    "enum": "",
    "keyword": "",
    "snippet": "",
    "color": "",
    "file": "",
    "reference": "",
    "folder": "",
    "enumMember": "",
    "constant": "",
    "struct": "",
    "event": "",
    "operator": "",
    "typeParameter": "",
    "default": ""
  },
  "floatFactory.floatConfig": {
    "border": true,
    "shadow": true,
    "borderhighlight": "CocBorder"
  },
  "suggest.floatConfig": {
    "border": true,
    "shadow": true,
    "borderhighlight": "CocBorder"
  },
  "diagnostic.floatConfig": {
    "border": true,
    "shadow": true,
    "borderhighlight": "CocBorder"
  },
  "signature.floatConfig": {
    "border": true,
    "shadow": true,
    "borderhighlight": "CocBorder"
  },
  "hover.floatConfig": {
    "border": true,
    "shadow": true,
    "borderhighlight": "CocBorder"
  },
  "languageserver": {
    "kotlin": {
      "command": "/opt/homebrew/bin/kotlin-language-server",
      "filetypes": ["kotlin"],
      "rootPatterns": ["build.gradle", "build.gradle.kts", "settings.gradle", "settings.gradle.kts"],
      "initializationOptions": {}
    }
  }
}
