#!/bin/bash

# ┬ ┬┌─┐┌┬┐┌─┐┌┬┐┌─┐
# │ │├─┘ ││├─┤ │ ├┤
# └─┘┴  ─┴┘┴ ┴ ┴ └─┘


cat << EOF
┌┐ ┬─┐┌─┐┬ ┬┌─┐┬┬  ┌─┐
├┴┐├┬┘├┤ │││├┤ ││  ├┤
└─┘┴└─└─┘└┴┘└  ┴┴─┘└─┘
EOF

cd "$DOTFILES/config/homebrew" && \
  brew bundle dump -f && \
  echo "Brew bundle dump was successfull!"


cat << EOF
┌─┐┬ ┌┬┐
│  │  │
└─┘┴─┘┴
EOF

softwareupdate --all --install --force
xcode-select --install


cat << EOF
┌┐┌┬  ┬┬┌┬┐
│││└┐┌┘││││
┘└┘ └┘ ┴┴ ┴
EOF

nvim +PlugUpgrade +PlugUpdate +CocUpdate +GoUpdateBinaries +qall && \
  nvim -c "TmuxlineSnapshot! ~/.tmux-statusline-colors.conf" +qall && \
  echo "Vim plugins and extensions were updated!"


cat << EOF
┌┬┐┌┬┐┬ ┬─┐ ┬
 │ ││││ │┌┴┬┘
 ┴ ┴ ┴└─┘┴ └─
EOF

~/.tmux/plugins/tpm/bin/update_plugins all


cat << EOF
┌─┐┬┌┬┐┬ ┬┬ ┬┌┐   ┌─┐┬  ┬
│ ┬│ │ ├─┤│ │├┴┐  │  │  │
└─┘┴ ┴ ┴ ┴└─┘└─┘  └─┘┴─┘┴
EOF

gh extension upgrade --all


cat << EOF
┌┐┌┌┐┌┌┐┌
│││││││││
┘└┘┘└┘┘└┘
EOF

rm -rf ${XDG_CONFIG_HOME:-$HOME/.config}/nnn/plugins
curl -Ls https://raw.githubusercontent.com/jarun/nnn/master/plugins/getplugs | sh


cat << EOF
┌─┐┌─┐┌┬┐┌─┐  ┌─┐┬  ┬ ┬┌─┐┬┌┐┌┌─┐
├─┤└─┐ ││├┤   ├─┘│  │ ││ ┬││││└─┐
┴ ┴└─┘─┴┘└    ┴  ┴─┘└─┘└─┘┴┘└┘└─┘
EOF

plugins=(
  direnv
  golang
  java
  kotlin
  lua
  maven
  mysql
  nodejs
  php
  postgres
  python
  ruby
  yarn
)
for item in ${plugins[@]}; do
  asdf plugin add $item
done
asdf plugin update --all


cat << EOF
┌─┐┬─┐┌─┐┌─┐┬ ┬
├┤ ├┬┘├┤ └─┐├─┤
└  ┴└─└─┘└─┘┴ ┴
EOF

fresh update
